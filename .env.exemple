# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=development
API_PREFIX=/api

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=wallet_user
DB_PASSWORD=wallet_password
DB_DATABASE=wallet_management
DB_LOGGING=false
DB_SSL=false

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_MIN=2

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# JWT CONFIGURATION
# ==============================================
# IMPORTANT: Generate secure secrets using: pnpm generate:secrets
# Minimum 32 characters recommended
JWT_SECRET=your_jwt_secret_min_32_chars_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_secret_min_32_chars_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ==============================================
# SWAGGER/API DOCUMENTATION
# ==============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
SWAGGER_TITLE=Wallet Management API
SWAGGER_DESCRIPTION=Production-ready API for managing cryptocurrency wallets

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Max wallets per user
MAX_WALLETS_PER_USER=100

# Supported blockchains (comma-separated)
SUPPORTED_CHAINS=Ethereum,Bitcoin,Polygon,BSC,Solana,Avalanche